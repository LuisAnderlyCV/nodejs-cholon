                <script>

                    //MUESTRA
                    function probando(productoJson) {
                        console.log(productoJson[0].idproducto);
                        console.log('Mostrando información del producto:');
                        for (var i = 0; i < productoJson.length; i++) {
                            console.log('ID Producto:', productoJson[i].codigo_producto);
                      
                        }
                        mostrarSeleccion(productoJson);
                    }
 
                    //SELCCIONA
                    function mostrarSeleccion(productoJson) {
                        console.log(productoJson[0].idproducto);
                        console.log('Mostrando información del producto:');

                        var selectElement = document.getElementById('nombre_categoria');
                        var selectedValue = selectElement.options[selectElement.selectedIndex].value;
                        let codigosAlmacenados = [];
                       
                        if (selectedValue === '1') {
                            console.log('Opción 1 seleccionada');

                            for (var i = 0; i < productoJson.length; i++) {
                                var codigo = productoJson[i].codigo_producto;
                          
                                var primeraLetra = codigo.charAt(0).toUpperCase(); 

                                if (primeraLetra === 'P') {
                                    console.log('Imprimir', primeraLetra, codigo);
                                    codigosAlmacenados.push(codigo);
  
                                }
                            }
                            var numeroCodigo = 1;

                            while (codigosAlmacenados.includes("P" + numeroCodigo.toString().padStart(3, "0"))) {
                                numeroCodigo++;
                            }

                            var nuevoCodigo = "P" + numeroCodigo.toString().padStart(3, "0");
                            console.log("CODIGO QUE COTINUA: ", nuevoCodigo);
                            campocodigo(nuevoCodigo);


                        } else if (selectedValue === '2') {
                            console.log('Opción 2 seleccionada');
                            for (var i = 0; i < productoJson.length; i++) {
                                var codigo = productoJson[i].codigo_producto;
                                var primeraLetra = codigo.charAt(0).toUpperCase(); 
                                if (primeraLetra === 'A') {
                                    console.log('Imprimir', primeraLetra, codigo);
                                    codigosAlmacenados.push(codigo);
                                  
                                }
                            }
                         
                            var numeroCodigo = 1;

                            while (codigosAlmacenados.includes("A" + numeroCodigo.toString().padStart(3, "0"))) {
                                numeroCodigo++;
                            }

                            var nuevoCodigo = "A" + numeroCodigo.toString().padStart(3, "0");
                            console.log("CODIGO QUE COTINUA: ", nuevoCodigo);
                            campocodigo(nuevoCodigo);


                        } else if (selectedValue === '3') {
                            console.log('Opción 3 seleccionada');
                            for (var i = 0; i < productoJson.length; i++) {
                                var codigo = productoJson[i].codigo_producto;
                          
                                var primeraLetra = codigo.charAt(0).toUpperCase(); 
                                if (primeraLetra === 'M') {
                                    console.log('Imprimir', primeraLetra, codigo);
                                    codigosAlmacenados.push(codigo);
                                   
                                }
                            }
                           
                            var numeroCodigo = 1;

                            while (codigosAlmacenados.includes("M" + numeroCodigo.toString().padStart(3, "0"))) {
                                numeroCodigo++;
                            }

                            var nuevoCodigo = "M" + numeroCodigo.toString().padStart(3, "0");
                            console.log("CODIGO QUE COTINUA: ", nuevoCodigo);
                            campocodigo(nuevoCodigo);



                        } else {
                            console.log('Opción no reconocida');
                        }
                        console.log('Códigos almacenados:', codigosAlmacenados);
                    }

                    function campocodigo(valorcodigo) {
                        document.getElementById('codigo_producto').value = valorcodigo;
                    }

                </script>
                <script>
                    
                    //EDITAR
                    function botoneditar(idproducto) {
                     
                        axios.get(`/admin/producto/${idproducto}`)
                            .then(function (response) {
                                const respuestadelquery = response.data;
                                if (respuestadelquery) {
                                    console.log(respuestadelquery);
                                    document.getElementById('idproducto').value = respuestadelquery.idproducto;
                                    document.getElementById('codigo_producto1').value = respuestadelquery.codigo_producto;
                                    document.getElementById('nombre_producto1').value = respuestadelquery.nombre_producto;
                                    document.getElementById('nombre_categoria1').value = respuestadelquery.idcategoria;
                                    document.getElementById('nombre_unidad1').value = respuestadelquery.idunidad;
                                    document.getElementById('descripcion1').value = respuestadelquery.descripcion;
                                    document.getElementById('stock1').value = respuestadelquery.stock;

                                }
                            })
                            .catch(function (error) {
                                console.error(error);
                            });
                    }


                    //AGRERAR
                    function postDatos() {
                      
                        const codigo_producto = document.getElementById('codigo_producto').value;
                        const nombre_producto = document.getElementById('nombre_producto').value;
                        const idcategoria = document.getElementById('nombre_categoria').value;
                        const idunidad = document.getElementById('nombre_unidad').value;
                        const descripcion = document.getElementById('descripcion').value;
                        const stock = document.getElementById('stock').value;

                        const data = {
                            codigo_producto: codigo_producto,
                            nombre_producto: nombre_producto,
                            idcategoria: idcategoria,
                            idunidad: idunidad,
                            descripcion: descripcion,
                            stock: stock
                        };
                        console.log(data);

                        axios.post('/admin/producto', data)
                            .then(function (response) {

                                Swal.fire({
                                    icon: 'success',
                                    title: 'Registro exitoso',
                                    text: 'El Producto se realizó correctamente.',
                                    timer: 2000,
                                    showConfirmButton: false 
                                });

                                setTimeout(function () {
                                    window.location.href = '/admin/producto';
                                }, 2000);
                            })

                    }

                    // GUARDAR CAMBIO
                    function guardarDatos() {
                        
                        const idproducto = document.getElementById('idproducto').value;
                        const codigo_producto1 = document.getElementById('codigo_producto1').value;
                        const nombre_producto1 = document.getElementById('nombre_producto1').value;
                        const idcategoria1 = document.getElementById('nombre_categoria1').value;
                        const idunidad1 = document.getElementById('nombre_unidad1').value;
                        const descripcion1 = document.getElementById('descripcion1').value;
                        const stock1 = document.getElementById('stock1').value;

                        const data = {
                            idproducto: idproducto,
                            codigo_producto1: codigo_producto1,
                            nombre_producto1: nombre_producto1,
                            idcategoria1: idcategoria1,
                            idunidad1: idunidad1,
                            descripcion1: descripcion1,
                            stock1: stock1
                        };

                        axios.put(`/admin/producto/${idproducto}`, data)
                            .then(function (response) {
                                Swal.fire({
                                    icon: 'success',
                                    title: 'Registro exitoso',
                                    text: 'El Producto se realizó correctamente.',
                                    timer: 2000,
                                    showConfirmButton: false
                                }).then(function () {
                                    
                                    location.reload();
                                });
                            })
                            .catch(function (error) {
                                console.error(error);
                            });

                    }

                    //ELIMINAR
                    function botoneliminar(idproducto) {
                       
                        Swal.fire({
                            title: '¿Estás seguro?',
                            text: 'Esta acción eliminará el Producto con ID ' + idproducto,
                            icon: 'warning',
                            showCancelButton: true,
                            confirmButtonText: 'Sí, eliminar',
                            cancelButtonText: 'Cancelar'
                        }).then((result) => {
                            if (result.isConfirmed) {
                                
                                axios.delete(`/admin/producto/${idproducto}`)
                                    .then((response) => {
                                      
                                        console.log('Producto eliminado con éxito');
                                        
                                        window.location.reload();
                                    })
                                    .catch((error) => {
                                       
                                        console.error('Error al eliminar el Producto:', error);
                                       
                                    });
                            }
                        });
                    }


                    //RESTABLECER
                    function botonveract(idproducto) {
                        
                        Swal.fire({
                            title: '¿Estás seguro?',
                            text: 'Esta acción restablecera el Producto con ID ' + idproducto,
                            icon: 'warning',
                            showCancelButton: true,
                            confirmButtonText: 'Sí, restablecer',
                            cancelButtonText: 'Cancelar'
                        }).then((result) => {
                            if (result.isConfirmed) {
                                
                                axios.delete(`/admin/borraproducto/${idproducto}`)
                                    .then((response) => {
                                        
                                        console.log('Producto restablecido con éxito');
                                       
                                        window.location.reload();
                                    })
                                    .catch((error) => {
                                        
                                        console.error('Error al restablecer Producto:', error);
                                        
                                    });
                            }
                        });
                    }


                    //MAYUSCULA Y SIN NUMEROS
                    function validarYConvertir(input) {
                        var regex = /^[A-Za-z\s]+$/;
                        if (!regex.test(input.value)) {
                           input.value = input.value.replace(/[^A-Za-z\s]+/, '');
                        }

                        input.value = input.value.toUpperCase();
                    }

                    //MAYUSCULA Y NUMERO SIN ESPACIO
                    function validarYConvertir2(input) {
                        var regex = /^[A-Z0-9]+$/;
                        input.value = input.value.toUpperCase().replace(/[^A-Z0-9]/g, '');
                    }

                    //MAYUSCULAS Y NUMERO CON ESPACIO
                    function validarYConvertir1(input) {
                        var regex = /^[A-Z0-9\s]+$/;
                        input.value = input.value.toUpperCase().replace(/[^A-Z0-9\s]/g, '');
                    }

                    //PARA BUSCAR EN MI TABLA
                    const campoBusqueda = document.getElementById('busqueda');
                    const filasTabla = document.querySelectorAll('tbody tr');

                    campoBusqueda.addEventListener('input', function () {
                        const consulta = campoBusqueda.value.toLowerCase();

                        filasTabla.forEach(function (fila) {
                            const contenidoFila = fila.textContent.toLowerCase();
                            if (contenidoFila.includes(consulta)) {
                                fila.style.display = 'table-row';
                            } else {
                                fila.style.display = 'none';
                            }
                        });
                    });

                </script>
