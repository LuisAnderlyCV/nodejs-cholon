                                                    <label for="direccion">Direcci√≥n:</label>
                                                    <input type="text" placeholder="Ingrese direcci√≥n" id="direccion"
                                                        oninput="this.value = this.value.toUpperCase()">

                                                    <label for="ciudad">Ciudad:</label>
                                                    <input type="text" placeholder="Ingrese ciudad" id="ciudad"
                                                        oninput="validarYConvertir(this)">

                                                    <label for="pais">Pa√≠s:</label>
                                                    <input type="text" placeholder="Ingrese pa√≠s" id="pais"
                                                        oninput="validarYConvertir(this)">

                                                    <label for="telefono">Telefono:</label>
                                                    <input type="text" placeholder="Ingrese telefono" id="telefono"
                                                        oninput="limitarADigitos(this, 9)" pattern="[0-9]*">

                                                    <label for="email">Correo</label>
                                                    <input type="text" placeholder="Ingrese correo" id="email">

                                                    <label for="nombre_categoria">Categoria:</label>
